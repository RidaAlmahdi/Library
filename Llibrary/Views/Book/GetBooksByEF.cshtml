
@using Library.DAL.Models;
@model List<Book>
@{
}
<div class="container c-body" style="">
    <div class="d-flex">
        <div class="align-self-center mx-auto">
            <h2>Book Records By EF</h2>
            <table id="booksTable" class="table table-striped table-bordered" style="width:100%">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Publish Date</th>
                        <th>Category Name </th>
                        <th>Author Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in ViewBag.books)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Name</td>
                            <td>@book.PublishDate</td>
                            <td>@book.BookCategory.CategoryName</td>
                            <td>@book.Author.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    $(function () {
        
        $('#booksTable').createTablePagination();
        
    });

</script>
                     