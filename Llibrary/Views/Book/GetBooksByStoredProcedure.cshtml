@using Library.DAL.Models;
@model List<SpBook>
@{
}
<div class="container c-body" style="">
    <div class="d-flex">
        <div class="align-self-center mx-auto">
            <h2>Book Records By Stored Procedure</h2>
            <table id="booksTable" class="table table-striped table-bordered" style="width:100%">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Publish Date</th>
                        <th>Category Name </th>
                        <th>Author Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in ViewBag.books)
                    {
                        <tr>
                            <td>@book.BookId</td>
                            <td>@book.BookName</td>
                            <td>@book.BookPublishDate</td>
                            <td>@book.BookCategoryName</td>
                            <td>@book.AuthorName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    $(function () {

        $('#booksTable').createTablePagination();

    });

</script>
